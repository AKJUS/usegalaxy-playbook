<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
<style>
body, html { width:100% ;
    height:100% ;
    overflow:hidden ;
}
iframe { width:100% ;
        height:calc(100% - 40px) ;
    border:none ;
    position: absolute;
    top: -9999em;
    visibility: hidden;
}
</style>
<link rel="stylesheet" href="dist/base.css" type="text/css" />
</head>
<body style="margin:0px">
    <iframe id='center-iframe' src="" onload="this.style.position='static'; this.style.visibility='visible';"></iframe>
    <div id="version-footer" height"40px" style="text-align:center;line-height:40px;height:40px;">
        <p class="text-center"><small>Galaxy version {{ galaxy_version }}, commit <code><a href="https://github.com/galaxyproject/galaxy/commit/{{ galaxy_commit }}" target="_blank">{{ galaxy_commit }}</a></code></small></p>
    </div>
<script type="text/javascript">
var pseudo_rand = parseInt(Date.now() / 1000 / 60 / 10);
document.getElementById('center-iframe').src = '{{ galaxy_welcome_url | default("https://galaxyproject.org/usegalaxy/welcome/") }}?nonce=' + pseudo_rand + '#';
</script>
</body>
</html>
