[program:galaxy_{{ galaxy_instance_codename }}_uwsgi]
command         = /usr/bin/sg {{ galaxy_group }} '{{ galaxy_venv_dir }}/bin/uwsgi --ini-paste {{ galaxy_config_dir }}/galaxy.ini'
directory       = {{ galaxy_web_server_dir }}
umask           = 022
autostart       = true
autorestart     = true
startsecs       = 15
user            = {{ galaxy_user }}
environment     = PYTHON_EGG_CACHE={{ instance_root }}/var/python-egg-cache-{{ galaxy_host_codename }}_uwsgi,PYTHONPATH={{ galaxy_web_eggs_path }}/PasteDeploy-1.5.0-py2.7.egg,GALAXY_EGGS_PATH={{ galaxy_web_eggs_path }}
numprocs        = 1
stopsignal      = INT
stdout_logfile  = /var/log/supervisord/{{ galaxy_host_codename }}_uwsgi.stdout.log
stderr_logfile  = /var/log/supervisord/{{ galaxy_host_codename }}_uwsgi.stderr.log

[program:{{ galaxy_host_codename }}_handler]
command         = /usr/bin/sg {{ galaxy_group }} '{{ galaxy_venv_dir }}/bin/python ./lib/galaxy/main.py -c {{ galaxy_config_dir }}/galaxy.ini --server-name={{ galaxy_host_codename }}_handler%(process_num)s'
directory       = {{ galaxy_handler_server_dir }}
process_name    = handler%(process_num)s
numprocs        = {{ galaxy_handler_count }}
umask           = 022
autostart       = true
autorestart     = true
startsecs       = 30
user            = {{ galaxy_user }}
environment     = PYTHON_EGG_CACHE={{ instance_root }}/var/python-egg-cache-{{ galaxy_host_codename }}_handler%(process_num)s,GALAXY_EGGS_PATH={{ galaxy_handler_eggs_path }}
stdout_logfile  = {{ galaxy_log_dir }}/{{ galaxy_host_codename }}_handler%(process_num)s.log
redirect_stderr = true
